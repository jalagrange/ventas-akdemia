<h1><%= @school.name%></h1>

<div class="row-fluid">
	<div class="span12">

		<%= render 'form' %>

		<%= link_to 'Show', @school, :class=> "btn" %>

	</div>
</div>

<div class="row-fluid">
	<ul class="pager">
		<%unless @previous_school.nil? %>
		<li>
			<%= link_to 'Previous', edit_school_path(@previous_school) %>
		</li>
		<%end%>

		<li>
			<%= link_to 'Next', edit_school_path(@next_school) %>
		</li>
	</ul>
</div>